<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#FFFFFF"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
>
    <ListView android:id="@+id/lv_SongList"
              android:layout_width="match_parent"
              android:layout_height="0dp"
        android:divider="#050505"
                android:dividerHeight="1dp"
              android:layout_weight="4"></ListView>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:background="#D1C4E9"
                  android:orientation="vertical"
                  android:layout_weight="1.3">
        <TextView android:id="@+id/tv_SongName2"
                  android:layout_width="match_parent"
                  android:text="One Spring Day"

                  android:textSize="23dp"
                  android:textStyle="bold"
                  android:textColor="#554660"
                  android:gravity="center"
                  android:paddingLeft="20dp"
                  android:layout_height="0dp"
                  android:layout_weight="2"/>
        <TextView android:id="@+id/tv_SongArtist2"
                  android:layout_width="match_parent"
                  android:text="One Spring Day"
                  android:textSize="18dp"
                  android:textColor="#554660"
                  android:gravity="center"
                  android:paddingLeft="20dp"
                  android:layout_height="0dp"
                  android:layout_weight="1.5"/>
        <TextView android:id="@+id/tv_Index"
            android:layout_width="match_parent"
            android:text="1/15"
            android:textSize="15dp"
            android:textColor="#554660"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:layout_height="0dp"

            android:layout_weight="1"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:layout_weight="1">
            <TextView android:id="@+id/timeStart"
                      android:layout_width="0dp"
                      android:text="00:00"
                      android:textSize="15dp"
                      android:textColor="#554660"
                      android:gravity="left"
                      android:paddingLeft="20dp"
                      android:layout_height="match_parent"
                      android:layout_weight="1"/>
            <TextView android:id="@+id/tv_SongTime2"
                      android:layout_width="0dp"
                      android:text="0:06/2:32"
                      android:textSize="15dp"
                      android:textColor="#554660"
                      android:gravity="center_vertical|right"
                      android:paddingRight="20dp"
                      android:layout_height="match_parent"
                      android:layout_weight="1"/>

        </LinearLayout>
        <SeekBar android:id="@+id/seekBar"
            android:thumb="@drawable/bg_circle_seek_bar"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:background="#D1C4E9"
                  android:orientation="horizontal"
                  android:layout_weight="0.4">

        <ImageView android:id="@+id/bt_Previous"
                   android:layout_width="0dp"
                   android:scaleType="centerInside"
                   android:src="@drawable/pr"
                   android:layout_height="match_parent"
                   android:layout_weight="1"/>
        <ImageView android:id="@+id/bt_StartPause"
                   android:layout_width="0dp"
                   android:scaleType="centerInside"
                   android:src="@drawable/pl"
                   android:layout_height="match_parent"
                   android:layout_weight="1"/>
        <ImageView android:id="@+id/bt_Next"
                   android:layout_width="0dp"
                   android:scaleType="centerInside"
                   android:src="@drawable/nn"
                   android:layout_height="match_parent"
                   android:layout_weight="1"/>


    </LinearLayout>
</LinearLayout>

